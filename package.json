{
  "name": "git-thing",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.7.0+sha512.dc09430156b427f5ecfc79888899e1c39d2d690f004be70e05230b72cb173d96839587545d09429b55ac3c429c801b4dc3c0e002f653830a420fa2dd4e3cf9cf",
  "module": "index.ts",
  "scripts": {
    "build": "DO_NOT_TRACK=1 bun build --compile --minify --sourcemap --bytecode ./index.ts --outfile ./build/git-thing",
    "copy": "cp ./build/git-thing /usr/local/bin/git-thing",
    "format": "prettier --ignore-unknown --write . --ignore-path .gitignore",
    "postinstall": "simple-git-hooks",
    "preinstall": "pnpm dlx only-allow bun"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.0-canary.20",
    "@clack/prompts": "1.0.0-alpha.1",
    "ai": "^5.0.0-canary.24",
    "cac": "^6.7.14",
    "chalk": "^5.4.1",
    "gpt-tokenizer": "^3.0.1",
    "simple-git": "^3.28.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bun": "latest",
    "@types/node": "^24.1.0",
    "@types/stream-json": "^1.7.8",
    "eslint": "^9.32.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-pkg": "^0.21.2",
    "simple-git-hooks": "^2.13.0",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write --allow-empty"
  },
  "prettier": {
    "organizeImportsSkipDestructiveCodeActions": true,
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-pkg"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  }
}
